@model IEnumerable<EquipmentLibrary.Model.Equipment>

<h1>Equipment List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Rental Price</th>
            <th>Availability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.RentalPrice</td>
                <td>@item.AvailabilityStatus</td>
            </tr>
        }
    </tbody>
</table>
