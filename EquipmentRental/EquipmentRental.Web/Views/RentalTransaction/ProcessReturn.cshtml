@model EquipmentRental.Web.Models.RentalTransactionViewModel
@{
    ViewData["Title"] = "Process Return";
}

<div class="container">
    <h2 class="mb-4">Process Equipment Return</h2>

    <div class="card">
        <div class="card-header">
            <h4>Rental Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Rental ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Customer Name:</dt>
                        <dd class="col-sm-8">@Model.CustomerName</dd>

                        <dt class="col-sm-4">Equipment:</dt>
                        <dd class="col-sm-8">@Model.EquipmentName</dd>

                        <dt class="col-sm-4">Expected Return:</dt>
                        <dd class="col-sm-8">@Model.ExpectedReturnDate.ToString("MM/dd/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h4>Return Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="ProcessReturn" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label class="form-label">Return Condition</label>
                    <select name="returnCondition" class="form-select" required>
                        <option value="">Select Condition</option>
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                        <option value="Poor">Poor</option>
                        <option value="Damaged">Damaged</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Late Return Fee (if applicable)</label>
                    <input type="number" name="lateReturnFee" class="form-control" min="0" step="0.01" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Additional Charges (if any)</label>
                    <input type="number" name="additionalCharges" class="form-control" min="0" step="0.01" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Notes</label>
                    <textarea name="notes" class="form-control" rows="3"></textarea>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Complete Return</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div> 